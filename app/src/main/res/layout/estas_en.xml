<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="0dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center_horizontal"
        card_view:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorCrema">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:background="@color/salmon"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Estas en:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textSize="21dp"
            android:textStyle="bold"
            android:maxLength="28"
            android:textColor="@color/salmon"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:id="@+id/lugarecerca"
            android:text="Plaza principal"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:id="@+id/dis"
            android:text="Distancia:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textSize="18dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/distanciam"
            android:text="50m"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:layout_marginTop="80dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Lugares cerca:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="105dp"
            android:textSize="16dp"
            android:maxLength="38"
            android:text="Lugar 1"
            android:id="@+id/cerca1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:maxLength="38"
            android:text="Lugar 2"
            android:id="@+id/cerca2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="155dp"
            android:textColor="@color/black"
            android:maxLength="38"
            android:textSize="16dp"
            android:text="Lugar 3"
            android:id="@+id/cerca3"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>