<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:backgroundTint="@color/colorCrema"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="bottom|left"
        card_view:cardElevation="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/plazaprincipal"
            android:id="@+id/listaFoto"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Plaza Principal"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/txtTitulo"/>

    <TextView
        android:layout_width="170sp"
        android:layout_height="wrap_content"
        android:text="Plaza"
        android:textSize="16sp"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:textColor="#353535"
        android:id="@+id/txtCategoria"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:src="@drawable/mapa"
        android:id="@+id/icono"/>

    <RatingBar
        android:id="@+id/txtEstrellas"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:stepSize="0.5"
        android:theme="@style/Theme.Rating"
        android:numStars="5"/>

    <TextView
        android:layout_width="170sp"
        android:layout_height="80dp"
        android:text="Esta es una plaza que se encuentra en el centro de Tepic."
        android:textSize="16sp"
        android:layout_gravity="right"
        android:layout_marginTop="120dp"
        android:layout_marginRight="10dp"
        android:textColor="#353535"
        android:justificationMode="inter_word"
        android:id="@+id/txtDescripcion"/>

</androidx.cardview.widget.CardView>